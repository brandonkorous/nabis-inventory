# Database
DATABASE_URL=postgresql://nabis:password@localhost:5432/nabis_inventory
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=10000
DB_CONNECTION_TIMEOUT_MS=5000

# RabbitMQ
AMQP_URL=amqp://nabis:password@localhost:5672
AMQP_PREFETCH=10

# Services
NODE_ENV=development
LOG_LEVEL=info

# Inventory API
INVENTORY_API_PORT=3000
INVENTORY_API_HOST=0.0.0.0

# Admin API
ADMIN_API_PORT=3100
ADMIN_API_HOST=0.0.0.0

# Event Dispatcher
EVENT_BATCH_SIZE=100
EVENT_POLL_INTERVAL_MS=200

# WMS Client
WMS_CLIENT_TYPE=mock
WMS_API_URL=https://wms.example.com/api
WMS_API_KEY=your-api-key-here
WMS_RATE_LIMIT_PER_MINUTE=60

# Observability
SERVICE_NAME=nabis-inventory
METRICS_ENABLED=true
