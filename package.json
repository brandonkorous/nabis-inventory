{
     "name": "nabis-inventory",
     "version": "1.0.0",
     "private": true,
     "description": "Production-grade inventory service with PostgreSQL and RabbitMQ",
     "workspaces": [
          "services/*"
     ],
     "scripts": {
          "build": "npm run build --workspaces --if-present",
          "lint": "eslint . --ext .ts",
          "format": "prettier --write \"**/*.{ts,json,md}\"",
          "format:check": "prettier --check \"**/*.{ts,json,md}\"",
          "test": "jest",
          "test:coverage": "jest --coverage",
          "migrate": "node -r ts-node/register services/shared/src/db/migrate.ts",
          "seed": "node -r ts-node/register services/shared/src/db/seed.ts"
     },
     "devDependencies": {
          "@types/jest": "^29.5.11",
          "@types/node": "^20.10.6",
          "@typescript-eslint/eslint-plugin": "^6.17.0",
          "@typescript-eslint/parser": "^6.17.0",
          "eslint": "^8.56.0",
          "eslint-config-prettier": "^9.1.0",
          "eslint-plugin-prettier": "^5.1.2",
          "jest": "^29.7.0",
          "prettier": "^3.1.1",
          "ts-jest": "^29.1.1",
          "ts-node": "^10.9.2",
          "typescript": "^5.3.3"
     },
     "engines": {
          "node": ">=20.0.0",
          "npm": ">=10.0.0"
     }
}
